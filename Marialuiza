  </div>  <script>
    function spawnHearts(count = 15) {
      const container = document.querySelector('.hearts');
      container.innerHTML = '';
      for (let i = 0; i < count; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart';
        heart.style.left = Math.random() * 100 + '%';
        heart.style.width = heart.style.height = (10 + Math.random() * 25) + 'px';
        heart.style.animationDuration = (3 + Math.random() * 4) + 's';
        heart.style.animationDelay = (Math.random() * 2) + 's';
        container.appendChild(heart);
      }
    }

    function replayHearts() {
      spawnHearts();
    }

    // Gera coraÃ§Ãµes continuamente para que o link funcione sempre que aberto
    setInterval(spawnHearts, 5000);
    spawnHearts();
  </script></body>
